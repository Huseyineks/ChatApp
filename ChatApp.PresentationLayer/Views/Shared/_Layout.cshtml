<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChatApp.PresentationLayer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChatApp.PresentationLayer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="parent @(ViewBag.SidebarSize == "Small" ? "smaller" : "")">
    <div class="side-bar @(ViewBag.SidebarSize == "Small" ? "smaller" : "")">
         <div class="logo">
            <h2>
           <a asp-controller="Home" asp-action="Index"> <i class="fa-solid fa-message"></i> </a>

        </h2>
        </div>
        
        <div class="ul-container">
           


            <ul>

                <li><a><i class="fa-solid fa-user"></i> <p class="link">Hesabım</p><br></a></li>
                <li><a><i class="fa-solid fa-bell"></i>  <p class="link">Bildirimler</p><br></a></li>
                <li class="messages"><a asp-controller="Chat" asp-action="Index"><i class="fa-solid fa-envelope"></i> <p class="link">Messages</p><br></a></li>

            </ul>

            <ul class="end">
                <li><a asp-controller="Login" asp-action="Index"><i class="fa-solid fa-right-to-bracket"></i>  <p class="link">Giriş Yap</p><br></a></li>
                <li><a asp-controller="Login" asp-action="Logout"><i class="fa-solid fa-right-from-bracket"></i>  <p class="link">Çıkış Yap</p><br></a></li>

            </ul>
        </div>

    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div

    </div>

   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ChatApp.PresentationLayer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
